/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  appId: 'com.ghs.ilzf',
  asar: true,
  directories: {
    output: 'release/${version}',
  },
  files: ['dist'],
  mac: {
    artifactName: '${productName}_${version}.${ext}',
    target: ['dmg'],
  },
  win: {
    target: [
      {
        target: 'nsis',
        arch: ['x64'],
      },
    ],
    artifactName: '${productName}_${version}.${ext}',
  },
  nsis: {
    oneClick: false,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: false,
  }, //"./methods.json"
  extraResources: [
    {
      from: './config.json',
      to: '../',
    },
    {
      from: './methods.json',
      to: '../',
    },
  ],
}
